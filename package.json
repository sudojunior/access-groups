{
  "name": "typescript-action",
  "version": "0.0.0",
  "private": true,
  "description": "TypeScript template action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "lint": "xo src/**/*.ts",
    "format": "xo src/**/*.ts --fix",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "ava",
    "test:debug": "ava --verbose",
    "all": "npm run build && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^5.0.0",
    "@octokit/types": "^6.18.1"
  },
  "devDependencies": {
    "@types/node": "^14.14.9",
    "@typescript-eslint/parser": "^4.28.2",
    "@vercel/ncc": "^0.28.6",
    "all-contributors-cli": "^6.20.0",
    "ava": "^3.15.0",
    "eslint": "^7.30.0",
    "eslint-config-xo": "^0.37.0",
    "eslint-config-xo-typescript": "^0.43.0",
    "eslint-plugin-github": "^4.1.1",
    "js-yaml": "^4.1.0",
    "prettier": "2.2.1",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "xo": "^0.41.0"
  },
  "ava": {
    "files": [
      "tests/**/*.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "failWithoutAssertions": false
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "xo-typescript"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "parser": "@typescript-eslint/parser"
  },
  "xo": {
    "rules": {
      "unicorn/prefer-node-protocol": "off"
    }
  }
}
