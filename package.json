{
  "name": "access-groups",
  "version": "1.0.0",
  "private": true,
  "description": "An action to help determine what groups a user belongs to.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "lint": "xo src/**/*.ts",
    "format": "xo src/**/*.ts --fix",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "ava",
    "test:debug": "ava --verbose",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "all": "yarn build && yarn lint && yarn package && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.6.0",
    "@actions/github": "5.0.0",
    "@octokit/types": "6.34.0"
  },
  "devDependencies": {
    "@types/node": "16.11.6",
    "@typescript-eslint/parser": "5.1.0",
    "@vercel/ncc": "0.31.1",
    "all-contributors-cli": "6.20.0",
    "ava": "3.15.0",
    "eslint": "8.1.0",
    "eslint-config-xo": "0.39.0",
    "eslint-config-xo-typescript": "0.45.2",
    "eslint-plugin-github": "4.3.3",
    "js-yaml": "4.1.0",
    "prettier": "2.4.1",
    "ts-node": "10.4.0",
    "typescript": "4.4.4",
    "xo": "0.45.0"
  },
  "ava": {
    "files": [
      "tests/**/*.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "failWithoutAssertions": false,
    "environmentVariables": {
      "GITHUB_REPOSITORY": "sudojunior/access-groups",
      "GITHUB_ACTOR": "sudojunior"
    }
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "xo-typescript"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "parser": "@typescript-eslint/parser"
  },
  "xo": {
    "files": [
      "*.ts"
    ],
    "rules": {
      "unicorn/prefer-node-protocol": "off",
      "capitalized-comments": "off"
    }
  }
}
